<h1>List: {{shoppingList.name}}</h1>
<a href="/users/{{user._id}}/lists/{{shoppingList._id}}/edit">Change List Name</a>
<ul>
    {{#each shoppingList.items}}
    <li>{{this.name}} - {{this.quantity}}</li>
    {{/each}}
</ul>


<a href='/users/{{user._id}}'>Go Back to Lists</a>
<a href='/users/{{user._id}}/lists/{{shoppingList._id}}/items/new'>Add Item to List</a>
<a href='/users/{{user._id}}/lists/{{shoppingList._id}}/items'>View All Items on List</a>
<form action='/users/{{user._id}}/lists/{{shoppingList._id}}?_method=DELETE' method='POST'>
    <input type="submit" value='Delete List'>
</form>