<div class="name">
    <h1>Hi, {{user.firstName}}!</h1>
</div>

<a class='editUser' href="/users/{{user._id}}/edit">(Edit User)</a>
<form action='/users/{{user._id}}?_method=DELETE' method='POST'>
    <input type="submit" value='Delete User'>
</form>


<div class="homeList">
    <h2 class='yourLists'>Your Lists <a class='addList' href="/users/{{user.id}}/lists/new">+</a></h2>
</div>

<div class='homeContainer'>
    <a class='home' href="/">Home</a>
</div>

<span class="listGroups">
    {{#each user.shoppingLists}}
    <div class="eachList">
        <h2 class='listName'>{{this.name}}</h2>

            <ul>
                {{#each this.items}}
                <li>{{this.name}} - quantity: {{this.quantity}}</li>
                {{/each}}
            </ul>
            <a class='listLink' href="/users/{{../user._id}}/lists/{{_id}}">Select This List</a><br><br>
    </div>
     {{/each}}
</span>

<div class='footerContainer'>
    <footer class="footer">
        <p class="footerNote">Made with &hearts; by Lauren Hemingway</p>
    </footer>
</div>




